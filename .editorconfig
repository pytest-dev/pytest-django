# https://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.py]
max_line_length = 99

[*.yml]
indent_size = 2

[*.ini]
indent_size = 2

[*.json]
indent_size = 2
insert_final_newline = unset

[*.rst]
indent_size = unset
insert_final_newline = unset

[*.bat]
indent_style = tab

[LICENSE]
indent_size = unset

[docs/Makefile]
indent_style = tab
